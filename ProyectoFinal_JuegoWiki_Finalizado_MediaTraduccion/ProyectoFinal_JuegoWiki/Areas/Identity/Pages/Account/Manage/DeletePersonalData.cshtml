@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Borrar Cuenta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div role="alert" style="background-color: antiquewhite;">
    <p style="text-align: center; color: rgb(50,50,50);">
        <strong>¿Estas seguro de que quieres hacer esto?<br />Esta acción no se puede deshacer.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label>Introduce la contraseña para confirmar:</label>
                <input asp-for="Input.Password" class="loginregister-input form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="boton-borrar" type="submit">Borra mi cuenta permanentemente</button>
    </form>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
