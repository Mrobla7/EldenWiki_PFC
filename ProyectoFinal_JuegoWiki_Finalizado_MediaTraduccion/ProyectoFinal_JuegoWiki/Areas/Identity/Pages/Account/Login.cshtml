@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio Sesión";
}

<div class="contenidoprincipal">
    <div style="width: 90%">
        <h1 style="margin-top:20px; font-size: 60px; margin-right: 20px;">INICIAR SESIÓN</h1>

        <hr class="barraSeparadora" />
    </div>

    <div class="row">
        <div>
            <section>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>Correo electrónico:</label>
                        <input asp-for="Input.Email" class="loginregister-input form-control"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Contraseña:</label>
                        <input asp-for="Input.Password" class="loginregister-input form-control"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                ¿Recordarme?
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="loginregister-btn">Iniciar sesión</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">He olvidado mi contraseña</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¿Nuevo en la wiki? Regístrate</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
