@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarme";
}

<div class="contenidoprincipal">
    <div style="width: 90%">
        <h1 style="margin-top:20px; font-size: 60px; margin-right: 20px;">REGISTRAR CUENTA</h1>

        <hr class="barraSeparadora" />
    </div>

    <div class="row">
        <div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label>Correo electrónico:</label>
                    <input asp-for="Input.Email" class="loginregister-input form-control" title="Correo no válido"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Contraseña: </label>
                    <input asp-for="Input.Password" class="loginregister-input form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Confirmar Contraseña: </label>
                    <input asp-for="Input.ConfirmPassword" class="loginregister-input form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="loginregister-btn">Registarme</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
