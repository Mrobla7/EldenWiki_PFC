@model ProyectoFinal_JuegoWiki.Models.Arma

@{
    ViewData["Title"] = "Borrar";

    var rutaCeniza = Model.CenizaID;
}

<div class="contenidoprincipal">
    <div style="width: 90%">
        <h1 style="margin-top:20px; font-size: 60px; margin-right: 20px;">BORRANDO ARMA</h1>

        <h3 style="color: red;">Confirma para borrar el siguiente item:</h3>

        <hr class="barraSeparadora" />
    </div>

    <div class="informacionTotal" style="display:flex; justify-content: space-between; width: 100%; padding: 0px 10%; padding-bottom: 30px;">
        <div style="font-size: 20px; width: 60%; display: flex; flex-flow:column; justify-content: space-between; align-items: center;">
            <div>
                <h2>@Html.DisplayFor(model => model.Nombre)</h2>
                <p>@Html.DisplayFor(model => model.Descripcion)</p>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ArmaID" />
                <input type="submit" value="Borrar" class="boton-borrar" /> |
                <a asp-action="Index">Cancelar</a>
            </form>
        </div>

        <div class="tarjeta" style="display: flex; flex-flow: wrap; align-items: center; justify-content: center; width: 40%;">

            <div class="tarjeta-imagen" style="display:flex; flex-flow:column; align-items:center; justify-content:center;">
                <h1>@Html.DisplayFor(model => model.TipoArma.Nombre)</h1>
                <img src="@("~/img/Armas/"+Model.TipoArma.Nombre+"/"+Model.Imagen)" asp-append-version="true" style="background: radial-gradient(closest-side, rgba(250, 235, 215, 0.6) 30%, rgba(250, 235, 215, 0.0));"/>
                <h3>@Html.DisplayNameFor(model => model.Ceniza) : <a asp-action="Details" asp-controller="Cenizas" asp-route-id="@rutaCeniza" style="text-decoration: none; color: antiquewhite;"> @Html.DisplayFor(model => model.Ceniza.Nombre)</a></h3>
                <h4>@Html.DisplayNameFor(model => model.Peso) : @Html.DisplayFor(model => model.Peso)</h4>

                <div class="propiedadesObjeto" style="display:flex; flex-flow:wrap; align-items:center;">
                    <div class="requerimientos" style="padding: 10px;">
                        @Html.DisplayNameFor(model => model.RequerimientoStr) :
                        @if (Model.RequerimientoStr == null)
                        {
                            <span>-</span>
                        }
                        else
                        {
                            <span>@Html.DisplayFor(model => model.RequerimientoStr)</span>
                        }

                        <br />

                        @Html.DisplayNameFor(model => model.EscaladoStr) :
                        @if (Model.EscaladoStr == null)
                        {
                            <span>-</span>
                        }
                        else
                        {
                            <span>@Html.DisplayFor(model => model.EscaladoStr)</span>
                        }

                        <br />

                        @Html.DisplayNameFor(model => model.RequerimientoDex) :
