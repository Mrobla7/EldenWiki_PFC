                        {
                            <span>-</span>
                        }
                        else
                        {
                            <span>@Html.DisplayFor(model => model.RequerimientoDex)</span>
                        }

                        <br />

                        @Html.DisplayNameFor(model => model.EscaladoDex) :
                        @if (Model.EscaladoDex == null)
                        {
                            <span>-</span>
                        }
                        else
                        {
                            <span>@Html.DisplayFor(model => model.EscaladoDex)</span>
                        }

                        <br />

                        @Html.DisplayNameFor(model => model.RequerimientoInt) :
                        @if (Model.RequerimientoInt == null)
