@model ProyectoFinal_JuegoWiki.Models.Armadura

@{
    ViewData["Title"] = "Editando";
}

<div class="contenidoprincipal">
    <div style="width: 90%">
        <h1 style="margin-top:20px; font-size: 60px; margin-right: 20px;">EDITANDO: @Html.DisplayFor(model => model.Nombre)</h1>

        <hr class="barraSeparadora" />
    </div>

    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArmaduraID" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>*
                <input asp-for="Nombre" class="loginregister-input form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="loginregister-input form-control" style="max-height: 500px; min-height: 60px; transition: none;"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>*
                <input type="file" asp-for="Imagen" class="loginregister-input form-control" required title="Se requiere una imagen"/>
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vitalidad" class="control-label"></label>*
                <input asp-for="Vitalidad" class="loginregister-input form-control" />
                <span asp-validation-for="Vitalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResFisica" class="control-label"></label>*
                <input asp-for="ResFisica" class="loginregister-input form-control" />
                <span asp-validation-for="ResFisica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResMagica" class="control-label"></label>*
                <input asp-for="ResMagica" class="loginregister-input form-control" />
                <span asp-validation-for="ResMagica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResFuego" class="control-label"></label>*
                <input asp-for="ResFuego" class="loginregister-input form-control" />
                <span asp-validation-for="ResFuego" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResRayo" class="control-label"></label>*
                <input asp-for="ResRayo" class="loginregister-input form-control" />
                <span asp-validation-for="ResRayo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResSagrado" class="control-label"></label>*
                <input asp-for="ResSagrado" class="loginregister-input form-control" />
                <span asp-validation-for="ResSagrado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>*
                <input asp-for="Peso" class="loginregister-input form-control"/>
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 40px; display: flex; align-items: center; justify-content: center;">
                <input type="submit" value="Guardar cambios" class="loginregister-btn" />
            </div>
        </form>
    </div>

    <div style="margin-top: 50px; margin-bottom: 20px;">
        <a asp-action="Index">Volver a la lista</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
