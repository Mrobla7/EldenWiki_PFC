@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Ha ocurrido un error mientras se procesaba tu petición.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>ID de petición:</strong> <code>@Model.RequestId</code>
    </p>
}
