@model ProyectoFinal_JuegoWiki.Models.TipoArma

@{
    ViewData["Title"] = "Crear";
}

<div class="contenidoprincipal">
    <div style="width: 90%">
        <h1 style="margin-top:20px; font-size: 60px; margin-right: 20px;">CREAR NUEVO TIPO DE ARMA</h1>

        <hr class="barraSeparadora" />
    </div>

    <div class="row">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>*
                <input asp-for="Nombre" class="loginregister-input form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 40px;">
                <input type="submit" value="Crear" class="loginregister-btn" />
            </div>
        </form>

    </div>

    <div style="margin-top: 50px; margin-bottom: 20px;">
        <a asp-action="Index">Volver a la lista</a>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
